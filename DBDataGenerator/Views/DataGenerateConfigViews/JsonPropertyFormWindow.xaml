<Window x:Class="DBDataGenerator.Views.DataGenerateConfigViews.JsonPropertyFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBDataGenerator.Views.DataGenerateConfigViews"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="JsonPropertyFormWindow" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <DockPanel >
            <TextBlock Text="属性名："/>
            <TextBox x:Name="inputPropertyName" Height="40"/>
        </DockPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal"  HorizontalAlignment="Right" Margin="0,0,10,10">
            <Button Content="保存" Width="50" PreviewMouseDown="Button_PreviewMouseDown"/>
        </StackPanel>
    </Grid>
</Window>
